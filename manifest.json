{
    "manifest_version": 3,
    "name": "Flashcard for Learning Language",
    "description": "A flashcard for me to learn Japanese",
    "version": "1.0",
    "action": {
        "default_popup": "popup/hello.html",
        "default_icon": "images/icon.png"
    },
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "permissions":  [
        "storage",
        "contextMenus",
        "notifications",
        "tabs",
        "scripting"
    ]
}