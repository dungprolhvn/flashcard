{
    "manifest_version": 3,
    "name": "Flashcard for Learning Language",
    "description": "A flashcard for me to learn Japanese",
    "version": "1.0",
    "action": {
        "default_popup": "popup/hello.html",
        "default_icon": "images/icon.jpg"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "background": {
        "service_worker": "scripts/saveNewWord.js",
        "type": "module"
    },
    "permissions":  [
        "storage",
        "contextMenus"
    ]
}